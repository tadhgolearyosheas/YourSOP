<div id="risks_list">
<table class="table table-striped">
  <thead>
  <tr>
    <th>
      Name
    </th>
    <th>
      Created
    </th>
    <th>
      Updated
    </th>
    <th>
      Score
    </th>
    <th>
      Last Audit Date
    </th>
    <th>
      Actions
    </th>
  </tr>
  </thead>
  <tbody>
  <% topics.each do |t| %>
      <tr>
        <td>
          <%= link_to t.name, risk_path(t.id) %>
        </td>
        <td>
          <%= t.created_at %>
        </td>
        <td>
          <%= t.updated_at %>
        </td>
        <td>
          <%= t.score %>
        </td>
        <td>
          <%= t.last_audit_date %>
        </td>
        <td>
            <%= link_to "Assess Risks", new_risk_path(:id => t.id), :class => "btn-link" %> |
            <%= link_to "Create Audit", new_audit_path(:id => t.id), :class => "btn-link" %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>
</div>

