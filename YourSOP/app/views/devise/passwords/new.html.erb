<h2>Forgot your password?</h2>

<%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, layout: :horizontal, label_col: "col-sm-1", control_col: "col-sm-6") do |f| %>
  <%= devise_error_messages! %>

    <%= f.email_field :email, autofocus: true %>

   <%= f.form_group do %>
    <%= f.submit "Send me reset password instructions", class: "btn btn-primary"  %>
  <% end %>
<% end %>

<%= render "devise/shared/links" %>
