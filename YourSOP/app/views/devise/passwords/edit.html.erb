<h2>Change your password</h2>

<%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, layout: :horizontal, label_col: "col-sm-1", control_col: "col-sm-6") do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>


    <%= f.password_field :password, label: "New password", autofocus: true, autocomplete: "off" %>


    <%= f.password_field :password_confirmation, label: "Confirm new password", autocomplete: "off" %>


  <%= f.form_group do %>
    <%= f.submit "Change my password", class: "btn btn-primary" %>
  <% end %>
<% end %>

<%= render "devise/shared/links" %>
