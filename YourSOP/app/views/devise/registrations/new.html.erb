<h2>Wecoleme to YourSOP, please fill in below form to sign up</h2>

<br />

<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-6") do |f| %>
  <%#= devise_error_messages! %>


  <%= f.text_field :name, autofocus: true  %>

  <%= f.email_field :email%>


  <% if @validatable %>
   (<%= @minimum_password_length %> characters minimum)
  <% end %>
  <br />
  <%= f.password_field :password, autocomplete: "off" %>

  <%= f.password_field :password_confirmation, autocomplete: "off" %>

  <%= f.form_group do %>
    <%= f.submit "Sign up", class: "btn btn-primary" %>
  <% end %>
<% end %>

<%= render "devise/shared/links" %>
